pipeline
{
    parameters
    {   
        choice(name: 'choice_of_branch_to_build', 
               choices: ['main', 'REL_1.0'], 
               description: 'choose the branch')
        string(name: 'Maven_Goal', 
               defaultValue: 'package', 
               description: 'select the maven goal')
    }
    triggers
    {
        pollSCM('* * * * *')
    }
    agent 
    { 
        label 'ubuntu'
    }
    stages 
    {
        stage('package') 
        {
            steps 
            {
                git url: 'https://github.com/tarunkumarpendem/spring-petclinic.git', 
                    branch: "${params.choice_of_branch_to_build}"
            }
        }    
        stage('build')
        {   
            steps
            {
               script
               { 
                sh "/usr/share/maven/bin/mvn ${params.Maven_Goal}"
               }
            
            }
              
        }
    }
}

